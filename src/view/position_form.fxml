<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="100.0" prefWidth="200.0">

    <children>
    <VBox>
        <padding>
            <Insets bottom="20"/>
        </padding>

        <children>

            <Label text="Название должности" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <TextField fx:id="name" styleClass="name-field" prefHeight="20.0" prefWidth="185.0" promptText="Введите название должности"/>
        </children>

    </VBox>
        <Button fx:id="saveBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="108.0"
                text="Save" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    </children>

</VBox>
